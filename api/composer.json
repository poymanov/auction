{
    "name": "poymanov/auction",
    "type": "project",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "^7.4",
        "php-di/php-di": "^6.1",
        "ramsey/uuid": "^4.0",
        "slim/psr7": "^1.0",
        "slim/slim": "^4.5",
        "symfony/console": "^5.0",
        "webmozart/assert": "^1.8"
    },
    "require-dev": {
        "overtrue/phplint": "^2.0",
        "phpunit/phpunit": "^9.1",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-html var/coverage",
        "app": "php bin/app.php --ansi"
    }
}
